from mcpi.minecraft import Minecraft
from mcpi import block
import time
import random

mc = Minecraft.create()

# üßç Gracz jako centrum akcji
pos = mc.player.getTilePos()
x, y, z = pos.x, pos.y, pos.z

# === 1. MAGICZNY KRƒÑG z REDSTONE ===
radius = 5
for angle in range(0, 360, 10):
    rad = angle * 3.14 / 180
    px = int(x + radius * math.cos(rad))
    pz = int(z + radius * math.sin(rad))
    mc.setBlock(px, y, pz, block.REDSTONE_BLOCK.id)

mc.postToChat("üßô‚Äç‚ôÇÔ∏è Przyzwanie rozpoczƒôte...")

time.sleep(1)

# === 2. DESZCZ P≈ÅONƒÑCYCH BLOK√ìW ===
for i in range(10):
    fx = x + random.randint(-3, 3)
    fz = z + random.randint(-3, 3)
    fy = y + 15

    # Upuszczanie ognistych blok√≥w (np. NETHERRACK + fire)
    mc.setBlock(fx, fy, fz, block.NETHERRACK.id)
    mc.setBlock(fx, fy + 1, fz, block.FIRE.id)
    time.sleep(0.2)

mc.postToChat("üî• KrƒÖg aktywowany!")

# === 3. WIE≈ªA ZE ≈öWIAT≈ÅA ===
for i in range(5):
    mc.setBlock(x, y + i, z, block.GLOWSTONE_BLOCK.id)
    time.sleep(0.1)

# === 4. AGENT i ZNAK DIAMENTU ===
# Teleport agent do ≈õrodka
mc.executeCommand(f"agent teleport to {x} {y+1} {z}")
time.sleep(1)

# Diamentowe "X" pod agentem
mc.setBlock(x-1, y, z-1, block.DIAMOND_BLOCK.id)
mc.setBlock(x+1, y, z-1, block.DIAMOND_BLOCK.id)
mc.setBlock(x,   y, z,   block.DIAMOND_BLOCK.id)
mc.setBlock(x-1, y, z+1, block.DIAMOND_BLOCK.id)
mc.setBlock(x+1, y, z+1, block.DIAMOND_BLOCK.id)

mc.postToChat("üíé AGENT PRZYWO≈ÅANY!")
